@model BlogCore.Models.Categoria

@{
    ViewData["Title"] = "Editar Categoria";
}

<br />
<br />

<h3 class="text-center">Editar una catetoría</h3>
<form method="POST" asp-action="Edit">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <label class="col-4">
                    <label asp-for="Nombre"></label>
                </label>
            </div>
            <div class="col-8">
                <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre de la categoría..." />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label class="col-8">
                    <label asp-for="Orden"></label>
                </label>
            </div>
            <div class="col-8">
                <input asp-for="Orden" class="form-control" placeholder="Ingrese el orden de visalizacion..." />
                <span asp-validation-for="Orden" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group row">
                <div class="col text-center">
                    <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.Id">Editar</button>
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-success form-control">Volver a lista</a>
                </div>
            </div>
        </div>
    </div>
</form>
