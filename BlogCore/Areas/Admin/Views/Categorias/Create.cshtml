@model BlogCore.Models.Categoria

@{
    ViewData["Title"] = "Crear Categoria";
}

<br />
<br />

<h3 class="text-center">Crear una nueva catetoría</h3>
<form method="POST" asp-action="Create">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <label class="col-4">
                    <label asp-for="Nombre"></label>
                </label>
            </div>
            <div class="col-8">
                <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre de la categoría..."/>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label class="col-4">
                    <label asp-for="Orden"></label>
                </label>
            </div>
            <div class="col-8">
                <input asp-for="Orden" class="form-control" placeholder="Ingrese el orden de visalizacion..."/>
                <span asp-validation-for="Orden" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group row">
                <div class="col-8 text-center">
                    <partial name="_VistaCrearVolver" />
                </div>
            </div>
        </div>
    </div>
</form>