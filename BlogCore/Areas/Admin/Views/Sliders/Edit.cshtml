@model BlogCore.Models.Slider

@{
    ViewData["Title"] = "Editar Slider";
}

<br />
<br />

<h3 class="text-center">Editar Slider</h3>
<form method="POST" asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="row px-2 mx-2 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label class="col-4">
                        <label asp-for="Nombre"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre de la categoría..." />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label class="col-4">
                        <label asp-for="Estado"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input type="checkbox" asp-for="Estado" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label class="col-4">
                        <label asp-for="UrlImagen"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input type="file" name="archivos" id="subidaArchivo" class="form-control" />
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col text-center">
                    <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.Id">Editar</button>
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-success form-control">Volver a lista</a>
                </div>
            </div>
        </div>
        <div class="col-4 pt-3">
            <img src="@Model.UrlImagen" width="100%" style="border-radius:5px; border: 1px solid #bbb9b9;"
        </div>
    </div>
</form>



